<%-include("partials/header")%>

<h1>Home</h1>
<p><%=homeContent%></p>

<!-- iterating through a for loop using 'forEach'? -->
<% posts.forEach(function(post){%>    
    <h1><%=post.title%></h1>
    <p class="truncate">  <!--not using truncate class-->
        <%=post.content.substring(0,99) + " ..."%> 
        <a href="/posts/<%= post.title %>"  >Read More</a>
    </p>

    <%}); %> 

